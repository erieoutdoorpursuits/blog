---
title: "My posts"
layout: "base.njk"
---

<h1>{{ title }}</h1>
<ul>
    {% for post in collections.posts | reverse %}
    <hr class="my-4" />
    <div class="post-preview">
    <li>
      <h2 class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
  <h3 class="post-subtitle"> {{ post.data.description }}</h3>
       <p class="post-date"><strong>Posted by Erie Outdoor Pursuits on {{ post.date | date("MMMM d, yyyy") }}</strong></p>
      </li>
    <div>
   {% endfor %}
</ul>

